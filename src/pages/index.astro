---
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Images pour les projets
const projectImage1 = "https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=400&q=80";
const projectImage2 = "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=400&q=80";
const projectImage3 = "https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=400&q=80";
---

<Layout title="Mon Portfolio - CV et Blog">
  <!-- Hero Section -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h1 class="text-4xl md:text-5xl font-bold font-heading text-secondary mb-4">
            Bienvenue sur mon portfolio
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Directeur Territorial de l'Urgence et du Secourisme, formateur et concepteur de solutions numériques.
          </p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">Microsoft Power Platform</span>
            <span class="bg-secondary/10 text-secondary px-3 py-1 rounded-full text-sm font-medium">Développement Web</span>
            <span class="bg-gray-500/10 text-gray-700 px-3 py-1 rounded-full text-sm font-medium">Formation</span>
            <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">Leadership</span>
          </div>
          <div class="flex space-x-4">
            <a href="/contact" class="bg-primary text-white py-2 px-6 rounded-lg font-semibold hover:bg-opacity-90 transition-colors">
              Me contacter
            </a>
            <a href="/projets" class="bg-white text-secondary py-2 px-6 rounded-lg font-semibold border border-secondary hover:bg-secondary hover:text-white transition-colors">
              Voir mes projets
            </a>
          </div>
        </div>
        <div class="md:w-1/2">
          <img 
            src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" 
            alt="Professionnel" 
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Formations Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Formations" 
        subtitle="Parcours et certifications" 
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary">
          <div class="flex items-center mb-4">
            <img src="https://img.icons8.com/color/48/000000/microsoft-power-automate.png" alt="Power Automate" class="w-10 h-10 mr-3" />
            <h4 class="text-lg font-semibold text-secondary">Concepteur Power Automate</h4>
          </div>
          <p class="text-gray-600">Certification permettant de créer des flux de travail automatisés entre applications et services.</p>
          <p class="text-sm text-gray-500 mt-2">2023</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary">
          <div class="flex items-center mb-4">
            <img src="https://img.icons8.com/color/48/000000/power-bi.png" alt="Power BI" class="w-10 h-10 mr-3" />
            <h4 class="text-lg font-semibold text-secondary">Concepteur Power BI</h4>
          </div>
          <p class="text-gray-600">Maîtrise des outils d'analyse de données et de création de tableaux de bord interactifs.</p>
          <p class="text-sm text-gray-500 mt-2">2022</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary">
          <div class="flex items-center mb-4">
            <img src="https://img.icons8.com/color/48/000000/training.png" alt="Formation" class="w-10 h-10 mr-3" />
            <h4 class="text-lg font-semibold text-secondary">Encadrant d'Activité de Formation</h4>
          </div>
          <p class="text-gray-600">Formation avancée pour concevoir et organiser des programmes de formation complets.</p>
          <p class="text-sm text-gray-500 mt-2">Modane, 2020</p>
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <a href="/formations" class="inline-block bg-secondary text-white py-2 px-6 rounded-lg font-semibold hover:bg-opacity-90 transition-colors">
          Voir toutes les formations
        </a>
      </div>
    </div>
  </section>

  <!-- Projets Web Section -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Projets Web" 
        subtitle="Sites web conçus et développés" 
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <ProjectCard 
          title="Croix-Rouge Puy-de-Dôme" 
          url="https://puydedome.croix-rouge.fr" 
          description="Site web de la délégation du Puy-de-Dôme de la Croix-Rouge française"
          image={projectImage1}
        />
        <ProjectCard 
          title="Croix-Rouge Ain" 
          url="https://ain.croix-rouge.fr" 
          description="Site web de la délégation de l'Ain de la Croix-Rouge française"
          image={projectImage2}
        />
        <ProjectCard 
          title="École de Musique Montluel" 
          url="https://site.ecoledemusiquemontluel.com" 
          description="Site web de l'école de musique de Montluel"
          image={projectImage3}
        />
      </div>
    </div>
  </section>

  <!-- Leadership Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Compétences en Leadership" 
        subtitle="Expérience en gestion d'équipe et coordination" 
      />
      
      <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/3">
          <img 
            src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" 
            alt="Leadership" 
            class="w-full h-64 object-cover rounded-lg shadow-md"
          />
        </div>
        <div class="md:w-2/3 bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-secondary mb-4">Direction Territoriale de l'Urgence et du Secourisme</h3>
          <p class="text-lg">
            En tant que Directeur Territorial de l'Urgence et du Secourisme de la Croix-Rouge du Rhône, j'anime une équipe de 17 cadres bénévoles, 3 salariés et 5 service civique sur des domaines tels que la formation, l'urgence, le secourisme, les moyens opérationnels, les télécoms, la communication, etc.
          </p>
          <p class="text-lg mt-4">
            Je collabore dans cette fonction avec l'ensemble des 1200 bénévoles de la Croix-Rouge française Délégation Territoriale du Rhône, en particulier de l'Action Sociale.
          </p>
          <div class="mt-4">
            <a href="/competences" class="text-primary font-semibold hover:underline">En savoir plus sur mes compétences →</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Certifications Section -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <SectionTitle 
        title="Certifications" 
        subtitle="Reconnaissances officielles de mes compétences" 
      />
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white p-4 rounded-lg text-center hover:shadow-md transition-shadow">
          <img src="https://img.icons8.com/color/96/000000/microsoft-power-automate.png" alt="Power Automate" class="w-16 h-16 mx-auto mb-3" />
          <h4 class="font-semibold text-secondary">Power Automate</h4>
          <p class="text-sm text-gray-600">Microsoft Certified</p>
        </div>
        
        <div class="bg-white p-4 rounded-lg text-center hover:shadow-md transition-shadow">
          <img src="https://img.icons8.com/color/96/000000/power-bi.png" alt="Power BI" class="w-16 h-16 mx-auto mb-3" />
          <h4 class="font-semibold text-secondary">Power BI</h4>
          <p class="text-sm text-gray-600">Microsoft Certified</p>
        </div>
        
        <div class="bg-white p-4 rounded-lg text-center hover:shadow-md transition-shadow">
          <img src="https://img.icons8.com/color/96/000000/microsoft-powerapps.png" alt="PowerApps" class="w-16 h-16 mx-auto mb-3" />
          <h4 class="font-semibold text-secondary">PowerApps</h4>
          <p class="text-sm text-gray-600">Microsoft Certified</p>
        </div>
        
        <div class="bg-white p-4 rounded-lg text-center hover:shadow-md transition-shadow">
          <img src="https://img.icons8.com/color/96/000000/first-aid-kit.png" alt="Secourisme" class="w-16 h-16 mx-auto mb-3" />
          <h4 class="font-semibold text-secondary">Formateur PSE</h4>
          <p class="text-sm text-gray-600">Croix-Rouge Française</p>
        </div>
      </div>
    </div>
  </section>
</Layout>