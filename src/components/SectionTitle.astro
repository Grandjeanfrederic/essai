---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-3xl font-heading font-bold text-secondary">{title}</h2>
  {subtitle && <p class="text-gray-600 mt-2">{subtitle}</p>}
  <div class="w-20 h-1 bg-primary mt-2"></div>
</div>